{% extends "base.twig" %}

{% block main %}
    {# Titre avec la classe .title de style.css #}
    <h1 class="title" id="contactFormTitle">Créer un compte</h1>

    {# Utilisation de l'ID contactForm pour récupérer le style exact de connexion #}
    <form action="/traitementInscription" method="POST" id="contactForm">
        
        {# Gestion des erreurs #}
        {% if error %}
            <div class="alert alert-danger" role="alert" style="font-size: 0.9rem;">
                {{ error }}
            </div>
        {% endif %}

        <label for="username">Nom d'utilisateur :</label>
        <input type="text" id="username" name="username" value="{{ data.username }}" required>

        <label for="email">Email :</label>
        <input type="email" id="email" name="email" value="{{ data.email }}" required>

        <label for="password">Mot de passe :</label>
        <input type="password" id="password" name="password" required>

        <label for="confirm_password">Confirmer le mot de passe :</label>
        <input type="password" id="confirm_password" name="confirm_password" required>

        <button type="submit">S'inscrire</button>

        {# Lien de retour #}
        <div style="margin-top: 15px; text-align: center; font-size: 0.9em;">
            <a href="/connexion">Déjà un compte ? Se connecter</a>
        </div>
    </form>
{% endblock %}