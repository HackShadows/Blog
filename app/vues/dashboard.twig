{% extends "base.twig" %}

{% block main %}
	{% if permissions['commentaire_gerer'] or permissions['article_publier'] %}
		{% include "notification.twig" %}
	{% endif %}
	{% if permissions['article_creer'] %}
		{% include "articleCreer.twig" %}
		{% include "mesArticles.twig" %}
	{% endif %}
	{% if permissions['utilisateur_gerer'] %}
		{% include "gestionUtilisateur.twig" %}
	{% endif %}
	{% if permissions['article_editer_tous'] %}
		{% include "articleEditerTous.twig" %}
	{% endif %}
	{% if permissions['article_publier'] and not permissions['article_editer_tous'] %}
		{% include "articlePublier.twig" %}
	{% endif %}
	{% if permissions['article_supprimer'] and not permissions['article_editer_tous'] %}
		{% include "articleSupprimer.twig" %}
	{% endif %}
	{% if permissions['commentaire_gerer'] %}
		{% include "gestionCommentaire.twig" %}
	{% endif %}
	{% if permissions['tag_gerer'] %}
		{% include 'tag.twig' %}
	{% endif %}
{% endblock %}